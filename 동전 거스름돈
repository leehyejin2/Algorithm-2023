#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main(void)
{
	int coin[5] = { 500, 100, 50, 10};
	int change, i, count[4];

	printf("거스름 돈을 입력하세요 : ");
	scanf("%d", &change);

	for (i = 0; i < 4; i++) {
		count[i] = change / coin[i];
		change = change % coin[i];

		printf("%d원 동전 = %d개\n", coin[i], count[i]);
	}
}
